@model List<TodoTask>

<div class="container">
  <div class="row pt-4 pb-3">
    <div class="col-6">
      <h2 class="text-primary">
        Todo Task
      </h2>
    </div>
    <div class="col-6 text-end">
      <a asp-controller="TodoTask" asp-action="Create" class="btn btn-primary">
        Create New Task
      </a>
    </div>
  </div>


  <h1> Task </h1>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>
          Task Name
        </th>
        <th>
          List
        </th>
        <th>
        </th>
      </tr>
    </thead>

    <tbody>
      @foreach (var obj in Model)
      {
        <tr>
          <td>@obj.Name</td>
          <td>@obj.TodoListId</td>
          <td>
            <div class="w-75 btn-group role="group">
              <a asp-controller="TodoTask" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Edit</a>
              <a asp-controller="TodoTask" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
            </div>
          </td>
        </tr>
      }
    </tbody>
  </table>

</div>